<%- include("header") -%>

<div class="box" id="heading">
  <h1><%= listTitle %></h1>
</div>

<div class="box">
  <% newListItems.forEach((each)=>{ %>
  <form action="/delete" method="post">
    <div class="item">
      <input name="checkbox" value=<%= each._id %> onChange="this.form.submit()" type="checkbox" />
      <p><%= each.name %></p>
      <input type="hidden" name="listName" value=<%= listTitle %> />
    </div>
  </form>
  <% } ) %>

  <form class="item" action="/" method="post">
    <input
      type="text"
      name="newItem"
      placeholder="New Item"
      autocomplete="off"
    />
    <button type="submit" name="list" value=<%= listTitle %> >+</button>
  </form>
</div>

<%- include("footer") -%>
